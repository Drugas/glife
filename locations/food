if $ARGS[0] = 'l_meal':
	cla
	*clr
	frost = 0
	minut += 30
	pcs_health += 10
	fat += 4
	pcs_energy += 100
	water += 100
	cumspclnt = 2
	gs 'cum_cleanup'
	pcs_breath = 0
	'<center><img src="images/shared/food/food.jpg"></center>'
	if plcooked = 1:
		'You gladly eat the cooked meal. You feel sated.'
		'You accompany it with a mug of tea.'
		act 'Finish': killvar 'plcooked' & gt $locM, $metkaM
	end
end

if $ARGS[0] = 'bag_lunch':
	cla
	*clr
	frost = 0
	minut += 20
