end

if $ARGS[0] = 'f_food':
	cla
	*clr
	frost = 0
	minut += 30
	pcs_health += 10
	fat += 4
	pcs_energy += 70
	water += 70
	cumspclnt = 2
	gs 'cum_cleanup'
	pcs_breath = 0
	'<center><img src="images/shared/food/food.jpg"></center>'
	'You gladly eat the fast food. You feel sated.'
	'The large drink helps your thirst, but it is a bit sugary.'

	act 'Finish':gt $locM, $metkaM
end

