if $ARGS[0] = 's_meal':
	cla
	*clr
	frost = 0
	minut += 20
	pcs_health += 10
	fat += 1
	pcs_energy += 40
	water += 40
	cumspclnt = 2
	gs 'cum_cleanup'
	pcs_breath = 0
	'<center><img src="images/shared/food/food.jpg"></center>'
	'You gladly eat the cooked meal. You feel less hungry.'
	'You wash it down with a cup of tea.'

	act 'Finish':gt $locM, $metkaM
end

if $ARGS[0] = 'm_meal':
