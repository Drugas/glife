end

!!Random girl, not teacher
if $ARGS[0] = 'rand_girl_arg':
	:rnd_girl_loop
	i = rand(0,47)
	if npcPol[i] = 0: jump 'rnd_girl_loop'
	$rand_girl = $npcName[i]
end

!!Random girl, not outcast or teacher
if $ARGS[0] = 'rand_girl_arg2':
	:rnd_girl_loop2
