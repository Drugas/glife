if $ARGS[0] = 'sweet':
	if Suspeh >= 90:
		Sweet_talk = 10
	elseif Suspeh >= 80:
		Sweet_talk = 5
	elseif Suspeh >= 70:
		Sweet_talk = 0
	elseif Suspeh >= 60:
		Sweet_talk = -5
	elseif Suspeh >= 60:
		Sweet_talk = -10
	else
		Sweet_talk = -20
	end
	if grupTipe = 2: Sweet_talk += 10
	if grupTipe = 3: Sweet_talk += 5
	if grupTipe = 4: Sweet_talk -= 10
	Sweet_talk += (hotcat - 5) * 5
end

!!Random boy, not teacher, nerd or outcast
if $ARGS[0] = 'rand_boy_arg':
	:rnd_boy_loop
	r = rand(0,55)
	if r > 47:
		$rand_boy = 'some boy'
	elseif npcPol[r] = 1 or grupTipe[r] = 0 or grupTipe[r] = 1 or grupTipe[r] = -1:
		jump 'rnd_boy_loop'
	end
	$rand_boy = $npcName[r]
end

!!Random boy, outcast or nerd (uses $rand_boy2)
if $ARGS[0] = 'rand_boy_arg2':
	:rnd_boy_loop2
	i = rand(0,55)
	if i > 47:
		$rand_boy2 = 'some boy'
	elseif npcPol[i] = 1 or  grupTipe[i] = 0 or grupTipe[i] = 2 or grupTipe[i] = 3 or grupTipe[i] = 4:
		jump 'rnd_boy_loop2'
	end
	$rand_boy2 = $npcName[i]
end

!!Random boy, not teacher or outcast
