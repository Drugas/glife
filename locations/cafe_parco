# cafe_parco
$location_type = 'public_indoors'

if $args[0]= 'start':
	'<center><h4><font color="maroon">Cafe "Del Parco"</font></h4></center>'
	'<img src="'+'images/qwest/alter/caffe_del_parco'+iif(hour > 20 or hour < 7,'_night','')+'.jpg'+'">'
	'The newly opened cafe "Del Parco", with eye-catching facade, lots of tables and a summer terrace. Open 14.00 to 21.00.'

	if hour >= 14 and hour < 21:
		act 'Go': gt 'cafe_parco', 'inner'
	end
	act 'In the square': gt 'gskver'
end

if $args[0]= 'inner':
	'<img src="images/qwest/alter/caffe_del_parco_in.jpg">'

	act 'Go': gt 'gskver'
	gs 'family'

	if (sunWeather = 0 or temper < 5) and week mod 2 = 0 and (hour >= 16 and hour < 20) and mey_vika_qw_day ! day:
		mey_vika_qw_day = day
		minut += rand(10,20)
		'In the cafe sitting at a table, Vika and Ivan.'

		if mey_vika_qw < 3:
			!! monochromatic
			'But coming close enough, you have not figured out what to do, and simply stomped on.'

		elseif mey_vika_qw < 5:
			'But coming close enough to all that you are bothered is quick "Hi".'

			!! connected relationship and response
			if mey_vika_relation < 60:
				'Vika and Ivan only glanced in your direction and turned away, but you have not invented anything better than to go.'
			else
				'Vika and Ivan answered in unison you "Hi", but you decided not to Russia has the conversation and simply went.'
			end

		elseif mey_vika_qw >= 5:
			if mey_vika_relation < 60:
				'You approached the couple and greeted them, but they did not pay any attention to you.'
			else
				'You approached the couple and greeted them, Victoria asked you about this, Ivan, as always, inserted the joke. Chatted a few minutes you left.'
			end

			!! something is going to happen here
			if mey_vika_relation >= 80:
				if mey_vika_qw = 10:
					cla
					'Vika and Ivan invited you to join.'
					if money < 300: 
						act 'Unsubscribe':
							cla
							'In your wallet is quite sparse, and impudent you are not wanted, so I decided to give up.'

							act 'Go': gt 'park'
						end
					end
					act 'Agree':
						mey_vika_qw = 15
						gt 'mey_vika_events', 'cafe_qw'
					end
				elseif mey_vika_qw >= 7: 
					'Leaving, you notice that Vika with Ivan about something whispering, embracing, looking after you, and the hand of Ivan while stroking and squeezing the ass Vicki, and she seem to not mind.'
				end
			end
		end
	else
		'There is no one here you would know.'
	end
end
