if $ARGS[0] = 'afterdrink':

	if pcs_hydra > 100:
		$mtxt = ' you are starting to feel bloated with a belly full of liquids.'
	elseif pcs_hydra >= 80:
		$mtxt = ' it was sufficant enough to quench your thirst.'
	elseif pcs_hydra >= 60:
		$mtxt = ' while you are no longer thirsty, but you could go another round.'
	elseif pcs_hydra >= 40:
		$mtxt = ' while your mouth is no longer dry, you want another drink.'
	else
		$mtxt = ' it did nothing to satisfy your thirst; you should probably have some more.'
	end
end


