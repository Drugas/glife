if menoage = 0:
	menoage = rand(40,50)
	temprand = rand(0,10)
	
	if temprand = 0:
		menoage += rand(0,5)
	
	elseif temprand < 4:
		menoage += rand(3,10)
	
	elseif temprand < 9:
		menoage += rand(5,12)
	
	else
		menoage += rand(7,13)
	
	end

end

