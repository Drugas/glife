# bras

!!gs 'bras', 'dispose'
!!gs 'bras', 'remove'
!!gs 'bras', 'wear'
!!gs 'bras', 'linen'
!!gs 'bras', 'fresh'

if $ARGS[0] = 'dispose':
!!	$braworntype = 'none'
!!	clrbelo -= 1
end

if $ARGS[0] = 'remove':
!!	$braworntype = 'none'
end

if $ARGS[0] = 'wear':
!!	$braworntype = 'cheap'
end

if $ARGS[0] = 'linen':
!!	$braworntype = 'none'
!!	dirtbelo += 1
end

if $ARGS[0] = 'fresh':
!!	$braworntype = 'cheap'
!!	clrbelo -= 1
end
 

--- bras ---------------------------------

