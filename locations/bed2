				gs 'clothing', 'wear', 'school', schtype
				minut += 15
				dynamic $wakepar
			end
		end

		act 'Get out of bed and get dressed (0:15)':
			gs 'clothing', 'wear_last_worn'
			minut += 15
			dynamic $wakepar
		end

		act 'Get out of bed (0:10)':
			minut += 10
			dynamic $wakepar
		end

	else
		jump 'loopson'
	end
end


