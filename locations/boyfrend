# boyfrend

if $ARGS[0] = 'start':
	if arrsize('pcs_lovers') > 2:
		'Hmm, you are already three boyfriend, why do you need a fourth?'
	else
		gs 'boyfrend', 'add'
	end
end

if $ARGS[0] = 'add':
	i = arrsize('pcs_lovers')
	$lover[i] = $boy
	$loverdesc[i] = $boydesc
	loverbodyrand[i] = boybodyrand
	$loverbody[i] = $boybody
	loverbodrand[i] = boybodrand
	$loverbod[i] = $boybod
	loverfacerand[i] = boyfacerand
	$loverface[i] = $boyface
	loverdick[i] = dick
	$loverdick_girth[i] = $dick_girth
	loversilaVag[i] = silaVag
	loverfinance[i] = finance
	vneshlover[i] = vneshBoy
	$loverClo[i] = $boyClo
	figurlover[i] = figurBoy
	titlover[i] = titBoy
	hairlover[i] = hairBoy
	haraklover[i] = harakBoy
	loverday[i] = daystart
	loverrelation[i] = 3
	loverdays[i] = 0
	boyonce[i] = 0
	loverizvrat[i] = izvrat
	giftDay[i] = 0
	giftNum[i] = 0
	loverlove[i] = 0
	loverscompliance[i] = 0
	boypic[i] = picrand
	meethour[i] = 0
	svidanie[i] = 0
	meetday[i] = 0

	
	!!new preferences
	clotTypePref[i] = clotTypePrefTmp
	clotQualPref[i] = clotQualPrefTmp
	clotTopPref[i] = clotTopPrefTmp
	bottShorPref[i] = bottShorPrefTmp
	clotThinPref[i] = clotThinPrefTmp
	bimbPref[i] = bimbPrefTmp
	pierPref[i] = pierPrefTmp
	tattPref[i] = tattPrefTmp
	lipsPref[i] = lipsPrefTmp
	bodyPref[i] = bodyPrefTmp
	makePref[i] = makePrefTmp
	IQPref[i] = IQPrefTmp
	
	pcs_lovers[i] = 1
	pcs_lover +=1
end

if $ARGS[0] = 'remove':
	i = ARGS[1]

	:loverremovalloop

	if i < 2 and $lover[i + 1] ! '':
		$lover[i] = $lover[i+1]
		$loverdesc[i] = $loverdesc[i+1]
		loverbodyrand[i] = loverbodyrand[i+1]
		$loverbody[i] = $loverbody[i+1]
		loverbodrand[i] = loverbodrand[i+1]
		$loverbod[i] = $loverbod[i+1]
		loverfacerand[i] = loverfacerand[i+1] 
		$loverface[i] = $loverface[i+1]
		loverdick[i] = loverdick[i+1]
		$loverdick_girth[i] = $loverdick_girth[i+1]
		loversilaVag[i] = loversilaVag[i+1]
		loverfinance[i] = loverfinance[i+1]
		vneshlover[i] = vneshlover[i+1]
		$loverClo[i] = $loverClo[i+1]
		figurlover[i] = figurlover[i+1]
		titlover[i] = titlover[i+1]
		hairlover[i] = hairlover[i+1]
		haraklover[i] = haraklover[i+1]
		loverday[i] = loverday[i+1]
		loverrelation[i] = loverrelation[i+1]
		loverdays[i] = loverdays[i+1]
		boyonce[i] = boyonce[i+1]
		loverizvrat[i] = loverizvrat[i+1]
		giftDay[i] = giftDay[i+1]
		giftNum[i] = giftNum[i+1]
		loverlove[i] = loverlove[i+1]
		loverscompliance[i] = loverscompliance[i+1]
		boypic[i] = boypic[i+1]
		meethour[i] = meethour[i+1]
		svidanie[i] = svidanie[i+1]
		meetday[i] = meetday[i+1]

		
		!!new preferences
		clotTypePref[i] = clotTypePref[i+1]
		clotQualPref[i] = clotQualPref[i+1]
		clotTopPref[i] = clotTopPref[i+1]
		bottShorPref[i] = bottShorPref[i+1]
		clotThinPref[i] = clotThinPref[i+1]
		bimbPref[i] = bimbPref[i+1]
		pierPref[i] = pierPref[i+1]
		tattPref[i] = tattPref[i+1]
		lipsPref[i] = lipsPref[i+1]
		bodyPref[i] = bodyPref[i+1]
		makePref[i] = makePref[i+1]
		IQPref[i] = IQPref[i+1]
		i += 1
		jump 'loverremovalloop'
	
	else
		killvar '$lover', i
		killvar '$loverdesc', i
		killvar 'loverbodyrand', i
		killvar '$loverbody', i
		killvar 'loverbodrand', i
		killvar '$loverbod', i
		killvar 'loverfacerand', i
		killvar '$loverface', i
		killvar 'loverdick', i
		killvar '$loverdick_girth', i
		killvar 'loversilaVag', i
		killvar 'loverfinance', i
		killvar 'vneshlover', i
		killvar '$loverClo', i
		killvar 'figurlover', i
		killvar 'titlover', i
		killvar 'hairlover', i
		killvar 'haraklover', i
		killvar 'loverday', i
		killvar 'loverrelation', i
		killvar 'loverdays', i
		killvar 'boyonce', i
		killvar 'loverizvrat', i
		killvar 'giftDay', i
		killvar 'giftNum', i
		killvar 'loverlove', i
		killvar 'loverscompliance', i
		killvar 'boypic', i
		killvar 'meethour', i
		killvar 'svidanie', i
		killvar 'meetday', i
		
		!!new preferences
		killvar 'clotTypePrefTmp', i
		killvar 'clotQualPrefTmp', i
		killvar 'clotTopPrefTmp', i
		killvar 'bottShorPrefTmp', i
		killvar 'clotThinPrefTmp', i
		killvar 'bimbPrefTmp', i
		killvar 'pierPrefTmp', i
		killvar 'tattPrefTmp', i
		killvar 'lipsPrefTmp', i
		killvar 'bodyPrefTmp', i
		killvar 'makePrefTmp', i
		killvar 'IQPrefTmp', i
		
		killvar 'pcs_lovers', i
		pcs_lover -=1
	end
end


