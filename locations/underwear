# underwear

!!gs 'underwear', 'dispose'
!!gs 'underwear', 'remove'
!!gs 'underwear', 'wear'
!!gs 'underwear', 'linen'
!!gs 'underwear', 'fresh'

if $ARGS[0] = 'dispose':
	tanga = 0
	clrbelo -= 1
end

if $ARGS[0] = 'remove':
	tanga = 0
end

if $ARGS[0] = 'wear':
	tanga = 1
end

if $ARGS[0] = 'linen':
	tanga = 0
	dirtbelo += 1
end

if $ARGS[0] = 'fresh':
	tanga = 1
	clrbelo -= 1
end
 

--- underwear ---------------------------------

