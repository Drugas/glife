# panties

!!gs 'panties', 'dispose'
!!gs 'panties', 'remove'
!!gs 'panties', 'wear'
!!gs 'panties', 'linen'
!!gs 'panties', 'fresh'

if $ARGS[0] = 'dispose':
	$lastwornpantytype = $pantyworntype
	lastwornpantynumber = pantywornnumber
	$pantyworntype = 'none'
	pantywornnumber = 0
	clrbelo -= 1
end

if $ARGS[0] = 'remove':
	$lastwornpantytype = $pantyworntype
	lastwornpantynumber = pantywornnumber
	$pantyworntype = 'none'
	pantywornnumber = 0
end

if $ARGS[0] = 'wear':
	$pantyworntype = $lastwornpantytype
	pantywornnumber = lastwornpantynumber
end

if $ARGS[0] = 'linen':
	$lastwornpantytype = $pantyworntype
	lastwornpantynumber = pantywornnumber
	$pantyworntype = 'none'
	pantywornnumber = 0
	dirtbelo += 1
end

if $ARGS[0] = 'fresh':
	$pantyworntype = 'cheap'
	pantywornnumber = rand(0,37)
	clrbelo -= 1
end

if $ARGS[0] = 'wear_opions':
	if cheap_panties > 0 and $pantyworntype ! 'cheap':*P dyneval($clothing_list_line, $ARGS[1], 'cheap', cheap_panty_number)
end

--- panties ---------------------------------

